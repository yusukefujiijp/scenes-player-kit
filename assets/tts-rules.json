{
  "kv": {
    "今日": "きょう",
    "明日": "あした",
    "昨日": "きのう",
    "今年": "ことし",
    "来年": "らいねん",
    "一日": "いちにち",
    "午前": "ごぜん",
    "午後": "ごご",
    "分間": "ふんかん",
    "秒間": "びょうかん",
    "〜": "ー",
    "〜〜": "ーー",
    "％": "パーセント",
    "%": "パーセント",
    "℃": "ど",
    "㎏": "キログラム",
    "㎞": "キロメートル",
    "㎜": "ミリメートル"
  },
  "regex": [
    { "pattern": "([0-9]+)日\\b",       "flags": "u", "repl": "$1にち" },
    { "pattern": "([0-9]+)月\\b",       "flags": "u", "repl": "$1がつ" },
    { "pattern": "令和([0-9]+)年",      "flags": "u", "repl": "れいわ$1ねん" },
    { "pattern": "([0-9]+)時\\b",       "flags": "u", "repl": "$1じ" },
    { "pattern": "([0-9]+)分\\b",       "flags": "u", "repl": "$1ふん" },
    { "pattern": "([0-9])0分\\b",       "flags": "u", "repl": "$10ぷん" },
    { "pattern": "([0-9]+)秒\\b",       "flags": "u", "repl": "$1びょう" },
    { "pattern": "([0-9,\\.]+)\\s*km\\b","flags": "iu","repl": "$1 キロメートル" },
    { "pattern": "([0-9,\\.]+)\\s*kg\\b","flags": "iu","repl": "$1 キログラム" },
    { "pattern": "([0-9,\\.]+)\\s*%",   "flags": "u", "repl": "$1 パーセント" },
    { "pattern": "([0-9]+)人\\b",       "flags": "u", "repl": "$1にん" }
  ]
}